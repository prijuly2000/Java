<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd" >
<validators>
  <field name="userName">
    <field-validator type="requiredstring">
      <message key="error.username.minlength"></message>
    </field-validator>
    <field-validator type="stringlength">
    	<param name="maxLength">10</param>
    	<message key="error.username.maxlength"></message>
    </field-validator>
    <field-validator type="stringlength">
    	<param name="minLength">4</param>
    	<message key="error.username.minlength"></message>
    </field-validator>
    </field>
    <field name="password">
    <field-validator type="stringlength">
    	<param name="minLength">4</param>
    	<message key="error.password.minlength"></message>
    </field-validator>
    <field-validator type="stringlength">
    	<param name="maxLength">10</param>
    	<message key="error.password.maxlength"></message>
    </field-validator>
  </field>
</validators>
